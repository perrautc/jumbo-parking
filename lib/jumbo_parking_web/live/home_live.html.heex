          <%= for {testimonial, idx} <- Enum.with_index(@testimonials) do %>
            <div class={"absolute inset-0 bg-[#1a1a1a] border border-[#c8d935]/20 rounded-3xl p-8 md:p-12 shadow-xl transition-all duration-[600ms] #{if idx == @testimonial_index, do: "opacity-100 scale-100 z-10", else: "opacity-0 scale-95 z-0"}"}>
